.contain
    height 450px
    position: relative;
    top: 50%;
    left: 50%;
    transition: all .8s;
    transform: translateX(-50%);
    color: #fff;
    overflow: hidden;
    cursor: pointer;
    .ul
        height: 100%;
        list-style: none;
        padding: 0;
        margin: 0;
        .items
            // position: absolute;
            // top: 0px;
            width: 100%;
            height: 100%;
            img
                width: 100%;
                height: 100%;
            .cam-viewport
                width: 100%;
                height: 430px;
    .dots
        position: absolute;
        left: 50%;
        bottom: 2rem;
        height: 10px;
        transform: translateX(-50%);
        li
            float: left;
            width: 10px;
            height: 10px;
            margin: 0px 5px;
            border-radius: 50%;
            transition: all .3s;
            background-color: antiquewhite;
            list-style: none;
        .active
            background-color: blue;
    .control
        .left
            position: absolute;
            top: 50%;
            left: 1rem;
            padding: 0.5rem;
            transform: translateY(-50%);
            font-size: 2rem;
            cursor: pointer;
            &:hover
                background-color: #466CA1;
            &:before
                content: '\003C';
                color: #fff ;
        .right
            position: absolute;
            top: 50%;
            right: 1rem;
            padding: 0.5rem;
            transform: translateY(-50%);
            font-size: 2rem;
            cursor: pointer;
            &:hover
                background-color: #466CA1;
            &:before
                content: '\003E';
                color: #fff ;
                vertical-align: middle
    @media screen and (max-width: 415px)
        height 95px
        .cam-viewport
            height: 95px;
            background-size: 100%
            background-repeat: no-repeat;
        .dots
            display none