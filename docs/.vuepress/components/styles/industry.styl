.industry
    padding: 0 8rem;
    .clear
        clear: both;
        height: 0px;
        overflow: hidden;
    .page_title
        width: 100%;
        text-align: left ;
        height: auto;
        float: left;
        margin-bottom: 50px;
    .service_list
        display: flex;
        a
            width: 300px;
            list-style: none;
            margin-right: 15px;
            li
                font-size: 22px;
                color: #FFF;
                text-align: center;
                img
                    float: left
                span
                    line-height: 100px;
            .ios
                background-color: #6DD27B;
            .andr
                background-color: #7FCEEF;
            .html5
                background-color: #F36979;
